<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue Formulaire Classe -->
        <record id="view_school_class_form" model="ir.ui.view">
            <field name="name">school.class.form</field>
            <field name="model">school.class</field>
            <field name="arch" type="xml">
                <form string="Classe">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom de la classe" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Informations de base">
                                <field name="code"/>
                                <field name="level"/>
                                <field name="section"/>
                                <field name="class_teacher_id"/>
                            </group>
                            <group string="Configuration">
                                <field name="capacity"/>
                                <field name="room_number"/>
                                <field name="student_count"/>
                                <field name="average_class_grade"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Étudiants">
                                <field name="student_ids">
                                    <tree>
                                        <field name="registration_number"/>
                                        <field name="name"/>
                                        <field name="email"/>
                                        <field name="phone"/>
                                        <field name="status"/>
                                        <field name="average_grade"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Cours">
                                <field name="course_ids">
                                    <tree>
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="teacher_id"/>
                                        <field name="credits"/>
                                        <field name="hours_per_week"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Emploi du temps">
                                <field name="schedule_ids">
                                    <tree>
                                        <field name="day_of_week"/>
                                        <field name="start_time" widget="float_time"/>
                                        <field name="end_time" widget="float_time"/>
                                        <field name="course_id"/>
                                        <field name="teacher_id"/>
                                        <field name="room"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notes">
                                <field name="notes" placeholder="Notes sur la classe..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue Arbre Classe -->
        <record id="view_school_class_tree" model="ir.ui.view">
            <field name="name">school.class.tree</field>
            <field name="model">school.class</field>
            <field name="arch" type="xml">
                <tree string="Classes">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="level"/>
                    <field name="section"/>
                    <field name="class_teacher_id"/>
                    <field name="student_count"/>
                    <field name="capacity"/>
                    <field name="average_class_grade"/>
                </tree>
            </field>
        </record>

        <!-- Vue Kanban Classe -->
        <record id="view_school_class_kanban" model="ir.ui.view">
            <field name="name">school.class.kanban</field>
            <field name="model">school.class</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="level"/>
                    <field name="student_count"/>
                    <field name="capacity"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="code"/> - <field name="level"/>
                                    </div>
                                    <div>
                                        Étudiants: <field name="student_count"/> / <field name="capacity"/>
                                    </div>
                                    <div>
                                        Salle: <field name="room_number"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vue Recherche Classe -->
        <record id="view_school_class_search" model="ir.ui.view">
            <field name="name">school.class.search</field>
            <field name="model">school.class</field>
            <field name="arch" type="xml">
                <search string="Rechercher Classe">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="level"/>
                    <field name="class_teacher_id"/>
                    <filter string="Niveau 1" name="level_1" domain="[('level', '=', '1')]"/>
                    <filter string="Niveau 2" name="level_2" domain="[('level', '=', '2')]"/>
                    <filter string="Niveau 3" name="level_3" domain="[('level', '=', '3')]"/>
                    <group expand="0" string="Grouper par">
                        <filter string="Niveau" name="group_level" context="{'group_by': 'level'}"/>
                        <filter string="Enseignant principal" name="group_teacher" context="{'group_by': 'class_teacher_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action Classe -->
        <record id="action_school_class" model="ir.actions.act_window">
            <field name="name">Classes</field>
            <field name="res_model">school.class</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_school_class_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer une nouvelle classe
                </p>
                <p>
                    Cliquez sur Créer pour ajouter une nouvelle classe.
                </p>
            </field>
        </record>

    </data>
</odoo>
