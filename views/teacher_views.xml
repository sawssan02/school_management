<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue Formulaire Enseignant -->
        <record id="view_school_teacher_form" model="ir.ui.view">
            <field name="name">school.teacher.form</field>
            <field name="model">school.teacher</field>
            <field name="arch" type="xml">
                <form string="Enseignant">
                    <header>
                        <button name="action_set_active" string="Activer" type="object" class="oe_highlight" invisible="status == 'active'"/>
                        <button name="action_set_on_leave" string="En congé" type="object" invisible="status == 'on_leave'"/>
                        <field name="status" widget="statusbar" statusbar_visible="draft,active"/>
                    </header>
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom de l'enseignant" required="1"/>
                            </h1>
                            <h2>
                                <field name="employee_number" readonly="1"/>
                            </h2>
                        </div>
                        <group>
                            <group string="Informations personnelles">
                                <field name="date_of_birth"/>
                                <field name="gender"/>
                                <field name="nationality"/>
                            </group>
                            <group string="Contact">
                                <field name="email" widget="email"/>
                                <field name="phone" widget="phone"/>
                                <field name="mobile" widget="phone"/>
                            </group>
                        </group>
                        <group>
                            <group string="Informations professionnelles">
                                <field name="hire_date"/>
                                <field name="department"/>
                                <field name="specialization"/>
                                <field name="qualification"/>
                                <field name="total_courses"/>
                            </group>
                            <group string="Adresse">
                                <field name="street" placeholder="Rue..."/>
                                <field name="street2"/>
                                <field name="city"/>
                                <field name="state_id"/>
                                <field name="zip"/>
                                <field name="country_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Cours">
                                <field name="course_ids">
                                    <tree>
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="class_id"/>
                                        <field name="credits"/>
                                        <field name="hours_per_week"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Emploi du temps">
                                <field name="schedule_ids">
                                    <tree>
                                        <field name="day_of_week"/>
                                        <field name="start_time" widget="float_time"/>
                                        <field name="end_time" widget="float_time"/>
                                        <field name="course_id"/>
                                        <field name="class_id"/>
                                        <field name="room"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notes internes">
                                <field name="notes" placeholder="Notes internes..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue Arbre Enseignant -->
        <record id="view_school_teacher_tree" model="ir.ui.view">
            <field name="name">school.teacher.tree</field>
            <field name="model">school.teacher</field>
            <field name="arch" type="xml">
                <tree string="Enseignants">
                    <field name="employee_number"/>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="department"/>
                    <field name="specialization"/>
                    <field name="status"/>
                    <field name="total_courses"/>
                </tree>
            </field>
        </record>

        <!-- Vue Kanban Enseignant -->
        <record id="view_school_teacher_kanban" model="ir.ui.view">
            <field name="name">school.teacher.kanban</field>
            <field name="model">school.teacher</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="employee_number"/>
                    <field name="email"/>
                    <field name="department"/>
                    <field name="status"/>
                    <field name="image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('school.teacher', 'image', record.id.raw_value)" alt="Teacher"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="employee_number"/>
                                    </div>
                                    <div>
                                        <field name="department"/>
                                    </div>
                                    <div>
                                        <field name="email"/>
                                    </div>
                                    <div>
                                        <field name="status" widget="badge"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vue Recherche Enseignant -->
        <record id="view_school_teacher_search" model="ir.ui.view">
            <field name="name">school.teacher.search</field>
            <field name="model">school.teacher</field>
            <field name="arch" type="xml">
                <search string="Rechercher Enseignant">
                    <field name="name"/>
                    <field name="employee_number"/>
                    <field name="email"/>
                    <field name="department"/>
                    <filter string="Actif" name="active" domain="[('status', '=', 'active')]"/>
                    <filter string="En congé" name="on_leave" domain="[('status', '=', 'on_leave')]"/>
                    <group expand="0" string="Grouper par">
                        <filter string="Département" name="group_department" context="{'group_by': 'department'}"/>
                        <filter string="Statut" name="group_status" context="{'group_by': 'status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action Enseignant -->
        <record id="action_school_teacher" model="ir.actions.act_window">
            <field name="name">Enseignants</field>
            <field name="res_model">school.teacher</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer un nouvel enseignant
                </p>
            </field>
        </record>

    </data>
</odoo>
