<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue Formulaire Étudiant -->
        <record id="view_school_student_form" model="ir.ui.view">
            <field name="name">school.student.form</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <form string="Étudiant">
                    <header>
                        <button name="action_set_active" string="Activer" type="object" class="oe_highlight" invisible="status == 'active'"/>
                        <button name="action_set_graduated" string="Diplômé" type="object" invisible="status == 'graduated'"/>
                        <button name="action_set_suspended" string="Suspendre" type="object" invisible="status == 'suspended'"/>
                        <field name="status" widget="statusbar" statusbar_visible="draft,active,graduated"/>
                    </header>
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom de l'étudiant" required="1"/>
                            </h1>
                            <h2>
                                <field name="registration_number" readonly="1"/>
                            </h2>
                        </div>
                        <group>
                            <group string="Informations personnelles">
                                <field name="date_of_birth"/>
                                <field name="age"/>
                                <field name="gender"/>
                                <field name="blood_group"/>
                                <field name="nationality"/>
                            </group>
                            <group string="Contact">
                                <field name="email" widget="email"/>
                                <field name="phone" widget="phone"/>
                                <field name="mobile" widget="phone"/>
                            </group>
                        </group>
                        <group>
                            <group string="Informations académiques">
                                <field name="class_id"/>
                                <field name="admission_date"/>
                                <field name="average_grade"/>
                                <field name="attendance_rate" widget="progressbar"/>
                            </group>
                            <group string="Tuteur">
                                <field name="guardian_name"/>
                                <field name="guardian_phone" widget="phone"/>
                                <field name="guardian_email" widget="email"/>
                                <field name="guardian_relation"/>
                            </group>
                        </group>
                        <group string="Adresse">
                            <field name="street" placeholder="Rue..."/>
                            <field name="street2"/>
                            <field name="city"/>
                            <field name="state_id"/>
                            <field name="zip"/>
                            <field name="country_id"/>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="grade_ids">
                                    <tree>
                                        <field name="date"/>
                                        <field name="course_id"/>
                                        <field name="evaluation_type"/>
                                        <field name="grade"/>
                                        <field name="max_grade"/>
                                        <field name="percentage"/>
                                        <field name="grade_letter"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Présence">
                                <field name="attendance_ids">
                                    <tree>
                                        <field name="date"/>
                                        <field name="course_id"/>
                                        <field name="status"/>
                                        <field name="check_in"/>
                                        <field name="check_out"/>
                                        <field name="reason"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notes internes">
                                <field name="notes" placeholder="Notes internes..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue Arbre Étudiant -->
        <record id="view_school_student_tree" model="ir.ui.view">
            <field name="name">school.student.tree</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <tree string="Étudiants">
                    <field name="registration_number"/>
                    <field name="name"/>
                    <field name="class_id"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="status"/>
                    <field name="average_grade"/>
                    <field name="attendance_rate" widget="progressbar"/>
                </tree>
            </field>
        </record>

        <!-- Vue Kanban Étudiant -->
        <record id="view_school_student_kanban" model="ir.ui.view">
            <field name="name">school.student.kanban</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="registration_number"/>
                    <field name="email"/>
                    <field name="class_id"/>
                    <field name="status"/>
                    <field name="image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('school.student', 'image', record.id.raw_value)" alt="Student"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="registration_number"/>
                                    </div>
                                    <div>
                                        <field name="class_id"/>
                                    </div>
                                    <div>
                                        <field name="email"/>
                                    </div>
                                    <div>
                                        <field name="status" widget="badge" decoration-success="status == 'active'" decoration-info="status == 'draft'" decoration-warning="status == 'suspended'"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vue Recherche Étudiant -->
        <record id="view_school_student_search" model="ir.ui.view">
            <field name="name">school.student.search</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <search string="Rechercher Étudiant">
                    <field name="name" string="Nom"/>
                    <field name="registration_number"/>
                    <field name="class_id"/>
                    <field name="email"/>
                    <filter string="Actif" name="active" domain="[('status', '=', 'active')]"/>
                    <filter string="Brouillon" name="draft" domain="[('status', '=', 'draft')]"/>
                    <filter string="Diplômé" name="graduated" domain="[('status', '=', 'graduated')]"/>
                    <filter string="Suspendu" name="suspended" domain="[('status', '=', 'suspended')]"/>
                    <separator/>
                    <filter string="Masculin" name="male" domain="[('gender', '=', 'male')]"/>
                    <filter string="Féminin" name="female" domain="[('gender', '=', 'female')]"/>
                    <group expand="0" string="Grouper par">
                        <filter string="Classe" name="group_class" context="{'group_by': 'class_id'}"/>
                        <filter string="Statut" name="group_status" context="{'group_by': 'status'}"/>
                        <filter string="Genre" name="group_gender" context="{'group_by': 'gender'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action Étudiant -->
        <record id="action_school_student" model="ir.actions.act_window">
            <field name="name">Étudiants</field>
            <field name="res_model">school.student</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_school_student_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer un nouvel étudiant
                </p>
                <p>
                    Cliquez sur Créer pour ajouter un nouvel étudiant.
                </p>
            </field>
        </record>

    </data>
</odoo>
