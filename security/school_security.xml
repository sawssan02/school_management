<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Catégorie de module -->
        <record id="module_category_school_management" model="ir.module.category">
            <field name="name">Gestion Scolaire</field>
            <field name="description">Gestion des écoles et établissements scolaires</field>
            <field name="sequence">10</field>
        </record>

        <!-- Groupe: Utilisateur -->
        <record id="group_school_user" model="res.groups">
            <field name="name">Utilisateur</field>
            <field name="category_id" ref="module_category_school_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Groupe: Enseignant -->
        <record id="group_school_teacher" model="res.groups">
            <field name="name">Enseignant</field>
            <field name="category_id" ref="module_category_school_management"/>
            <field name="implied_ids" eval="[(4, ref('group_school_user'))]"/>
        </record>

        <!-- Groupe: Gestionnaire -->
        <record id="group_school_manager" model="res.groups">
            <field name="name">Gestionnaire</field>
            <field name="category_id" ref="module_category_school_management"/>
            <field name="implied_ids" eval="[(4, ref('group_school_teacher'))]"/>
        </record>

        <!-- Groupe: Administrateur -->
        <record id="group_school_admin" model="res.groups">
            <field name="name">Administrateur</field>
            <field name="category_id" ref="module_category_school_management"/>
            <field name="implied_ids" eval="[(4, ref('group_school_manager'))]"/>
        </record>

        <!-- Règles d'accès aux enregistrements -->
        
        <!-- Étudiants -->
        <record id="school_student_user_rule" model="ir.rule">
            <field name="name">Étudiant: Utilisateur</field>
            <field name="model_id" ref="model_school_student"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_school_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="school_student_manager_rule" model="ir.rule">
            <field name="name">Étudiant: Gestionnaire</field>
            <field name="model_id" ref="model_school_student"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_school_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Enseignants -->
        <record id="school_teacher_user_rule" model="ir.rule">
            <field name="name">Enseignant: Utilisateur</field>
            <field name="model_id" ref="model_school_teacher"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_school_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="school_teacher_manager_rule" model="ir.rule">
            <field name="name">Enseignant: Gestionnaire</field>
            <field name="model_id" ref="model_school_teacher"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_school_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
